{% extends 'base.html.twig' %}

{% block title %}Modele index{% endblock %}

{% block body %}
    {% block spinner %}
        {{ parent() }}
    {% endblock %}

    {% block navbar %}
        {{ parent() }}
    {% endblock %}
    <h1>Modele index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Modele</th>
            <th>Marque</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for modele in modeles %}
            <tr>
                <td>{{ modele.id }}</td>
                <td>{{ modele.modele }}</td>
                <td>{{ modele.marque }}</td>
                <td>
                    <a href="{{ path('app_modele_show', {'id': modele.id}) }}">Afficher</a>
                    <a href="{{ path('app_modele_edit', {'id': modele.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_modele_new') }}">Ajouter un Modele</a>
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 wow fadeIn" data-wow-delay="0.1s" style="margin-top: 6rem;">
        <div class="container py-5">

        </div>
        <div class="container">
            <div class="copyright">
                <h4><a href="{{ path('app_admin') }}">retour</a></h4>
            </div>
        </div>
    </div>
    <!-- Footer End -->
{% endblock %}

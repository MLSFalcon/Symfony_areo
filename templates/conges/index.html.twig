{% extends 'base.html.twig' %}

{% block title %}Conges index{% endblock %}

{% block body %}
    {% block spinner %}
        {{ parent() }}
    {% endblock %}

    {% block navbar %}
        {{ parent() }}
    {% endblock %}
    <h1>Conges index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>EstValide</th>
                <th>Pilote</th>
                <th>Valider par</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conge in conges %}
            <tr>
                <td>{{ conge.id }}</td>
                <td>{{ conge.dateDebut ? conge.dateFin|date('Y-m-d') : ''}}</td>
                <td>{{ conge.dateFin ? conge.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ conge.estValide ? 'Yes' : 'No' }}</td>
                <td>{{ conge.refPilote }}</td>
                <td>{{ conge.refValidationAdmin }}</td>
                <td>
                    <a href="{{ path('app_conges_show', {'id': conge.id}) }}">show</a>
                    <a href="{{ path('app_conges_edit', {'id': conge.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="container-fluid bg-dark text-light footer pt-5 wow fadeIn" data-wow-delay="0.1s" style="margin-top: 6rem;">
        <div class="container py-5">

        </div>
        <div class="container">
            <div class="copyright">
                <h4><a href="{{ path('app_admin') }}">retour</a></h4>
            </div>
        </div>
    </div>
{% endblock %}
